@{
    ViewData["Title"] = "Project Management";
}

<h1>Project Management System</h1>

<a href="#" id="createNewProjectBtn" class="btn btn-primary mb-3">Create New Project</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Project ID</th>
            <th>Project Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="projectTableBody">
        <!-- Dữ liệu dự án sẽ được chèn vào đây bằng JavaScript -->
    </tbody>
</table>

<!-- Modal for Create/Edit Project -->
<div class="modal fade" id="projectModal" tabindex="-1" role="dialog" aria-labelledby="projectModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="projectModalLabel">Create New Project</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="projectForm">
                    <input type="hidden" id="projectId" />
                    <div class="form-group">
                        <label for="projectName">Project Name</label>
                        <input type="text" class="form-control" id="projectName" required />
                    </div>
                    <div class="form-group">
                        <label for="projectStartDate">Start Date</label>
                        <input type="date" class="form-control" id="projectStartDate" required />
                    </div>
                    <div class="form-group">
                        <label for="projectEndDate">End Date</label>
                        <input type="date" class="form-control" id="projectEndDate" required />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" id="saveProjectBtn" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script>
        const apiUrl = 'https://localhost:7228/api/projects';

        $(document).ready(function () {
            loadProjects();

            // Show modal for creating a new project
            $('#createNewProjectBtn').click(function () {
                $('#projectModalLabel').text('Create New Project');
                $('#projectForm')[0].reset();
                $('#projectId').val('');
                $('#projectModal').modal('show');
            });

            // Save project (Create or Update)
            $('#saveProjectBtn').click(function () {
                const projectId = $('#projectId').val();
                const projectName = $('#projectName').val();
                const projectStartDate = $('#projectStartDate').val();
                const projectEndDate = $('#projectEndDate').val();

                const projectData = {
                    projectName: projectName,
                    projectStartDate: projectStartDate,
                    projectEndDate: projectEndDate
                };

                if (projectId) {
                    // Update existing project
                    $.ajax({
                        url: apiUrl + '/' + projectId,
                        type: 'PUT',
                        contentType: 'application/json',
                        data: JSON.stringify(projectData),
                        success: function () {
                            $('#projectModal').modal('hide');
                            loadProjects();
                        }
                    });
                } else {
                    // Create new project
                    $.ajax({
                        url: apiUrl,
                        type: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify(projectData),
                        success: function () {
                            $('#projectModal').modal('hide');
                            loadProjects();
                        }
                    });
                }
            });
        });

        // Load projects from API
        function loadProjects() {
            $.get(apiUrl, function (projects) {
                $('#projectTableBody').empty();
                if (projects.length === 0) {
                    $('#projectTableBody').append('<tr><td colspan="5">No projects found.</td></tr>');
                } else {
                    $.each(projects, function (index, project) {
                        $('#projectTableBody').append(`
                                    <tr>
                                        <td>${project.projectId}</td>
                                        <td>${project.projectName}</td>
                                        <td>${new Date(project.projectStartDate).toLocaleDateString()}</td>
                                        <td>${new Date(project.projectEndDate).toLocaleDateString()}</td>
                                        <td>
                                            <button class="btn btn-warning btn-sm editProjectBtn" data-id="${project.projectId}">Edit</button>
                                            <button class="btn btn-danger btn-sm deleteProjectBtn" data-id="${project.projectId}">Delete</button>
                                        </td>
                                    </tr>
                                `);
                    });

                    // Edit project button click event
                    $('.editProjectBtn').click(function () {
                        const id = $(this).data('id');
                        $.get(apiUrl + '/' + id, function (project) {
                            $('#projectModalLabel').text('Edit Project');
                            $('#projectId').val(project.projectId);
                            $('#projectName').val(project.projectName);
                            $('#projectStartDate').val(project.projectStartDate.split('T')[0]);
                            $('#projectEndDate').val(project.projectEndDate.split('T')[0]);
                            $('#projectModal').modal('show');
                        });
                    });

                    // Delete project button click event
                    $('.deleteProjectBtn').click(function () {
                        const id = $(this).data('id');
                        if (confirm('Are you sure you want to delete this project?')) {
                            $.ajax({
                                url: apiUrl + '/' + id,
                                type: 'DELETE',
                                success: function () {
                                    loadProjects();
                                }
                            });
                        }
                    });
                }
            });
        }
    </script>
}
